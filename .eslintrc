{

  "extends": "airbnb-base/legacy",

  "plugins": [
    "jasmine"
  ],

  "globals": {
    "require": true,
    "angular": true,
    "$": true,
    "Foundation": true
  },

  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src"]
      }
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },

  "rules": {

    "indent": [2, 4, {
      "SwitchCase": 1
    }],

    "no-use-before-define": [2, {
      "functions": false,
      "classes": true
    }],

    "no-multi-spaces": [2, {
      "exceptions": {
        "Property": true,
        "VariableDeclarator": true,
        "ImportDeclaration": true,
        "AssignmentExpression": true
      }
    }],

    "comma-dangle": [2, {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "ignore",
      "exports": "ignore",
      "functions": "ignore",
    }],

    "new-cap": 0,
    "padded-blocks": 0,
    "vars-on-top": 0,
    "key-spacing": 0,
    "max-len": 0,
    "no-unused-vars": 0,
    "no-shadow": 0,
    "no-plusplus": 0,
    "no-param-reassign": 0,
    "radix": 0,
    "dot-notation": 0,
    "quote-props": 0,
    "object-shorthand": 0,
    "global-require": 0,
    "jsx-a11y/no-static-element-interactions": 0

  }
}